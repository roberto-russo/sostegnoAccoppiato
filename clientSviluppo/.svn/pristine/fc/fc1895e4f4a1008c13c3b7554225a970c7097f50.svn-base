import it.csi.srmanags.wsbridge2.CapoVacca;
import it.csi.zoo.controlli.visitor.entityRef.Ref02_004;

import java.util.Date;

public class ControlloVisitorImpl implements ControlloVisitor {

    /*
     * Qui sono definiti tutti i controlli per gli Interventi.
     * */

    @Override
    public Integer visit(Ref02_004 ref02_004) throws ControlloException {
        ref02_004.controlliPreAmmissibilita();

        Date now = new Date();
        int res = 0;
        for (CapoVacca c : ref02_004.getModelVacche()) {
            // A QUESTO PUNTO ESEGUI I CALCOLI PER LE
            if (new Date().getDate() != now.getDate() || null == c.getCodiceVitello() || null == c.getCodLibro())
                continue;

            // A questo punto il capo ha passato i controlli. Aumentare l'importo
            // res += IMPORTO
        }

        return res;
    }
}
