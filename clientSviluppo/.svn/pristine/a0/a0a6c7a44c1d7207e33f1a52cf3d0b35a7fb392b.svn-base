    @GetMapping(value = "/calcoloArt52")
    public String calcoloArt52(@PathVariable("annoCampagna") Integer annoCampagna) {

        /* INIZIALIZZO L'OGGETTO SESSIONE */
        Dmt_s_sessione sessione = sessioneService.saveSession(new Dmt_s_sessione());

        /* PROCEDO CON IL CALCOLO ART 52 */
        List<Rpu_V_pratica_zoote> list = aziendaService.getAll();

        Dmt_t_subentro_zoo subentro = null;

        int res;
        for (Rpu_V_pratica_zoote azienda : list) {
            try {
                subentro = subentroService.getSubentro(annoCampagna, azienda.getCuaa());
//                if (subentro == null) {
//                    throw new NullPointerException();
//                }
                res = controlliFramework.handleControlloCUUA(azienda, subentro, sessione);
                /*
                 * Definire qui il modo per gestire l'eventuale risultato dei controlli
                 */
            } catch (IndexOutOfBoundsException | IllegalStateException | ConstraintViolationException | NullPointerException e) {
                /*
                 * Il controllo non ha superato un parametro bloccante. Eccezzione restituita
                 * per l'azienda.
                 */
                //e.printStackTrace();
//                System.out.println("ERROR: " + e.getCause() + ", " + e.getMessage());
                if (subentro == null) {
//                    System.out.println("ERRORE, SUBENTRO NON TROVATO");
                    Dmt_t_errore errore = new Dmt_t_errore();
                    String input = "2018" + " | " + azienda.getCuaa() + " | " + azienda.getCodicePremio() + " | " + sessione.getIdSessione();
                    errore.setErrorecodice("-1");
                    errore.setErroreDesc("dati non disponibili");
                    errore.setNomeMetodo("subentroService.getSubentro");
                    errore.setInput(input);
//                    System.out.println("ID SESSIONE ERRORE: " + sessione.getIdSessione());
                    errore.setSessione(sessione);
                    erroreService.saveError(errore);
//                    System.out.println("FINE SALVATAGGIO A DB DELL'ERRORE");
                }
            } catch (ControlloException e) {
                if (null != e.getErrore())
                    erroreService.saveError(e.getErrore());
                else System.out.println(e.getMessage());
            }
        }
        return "Procedura avviata";
    }

